<ServerManagerConfiguration>
    <ProxyGroup name="filters">
        <SourceProxy name="FeatureSurface" class="FeatureSurface" label="Feature Surface">

            <Documentation
                long_help="Identify, extract and colorize the featured surfaces of unstructured grids."
                short_help="Extract featured surfaces of an unstructured grid.">
            </Documentation>
            
            <!-- Input Connection -->
            <InputProperty
                name="Input"
                command="SetInputConnection">
                <ProxyGroupDomain name="groups">
                    <Group name="sources"/>
                    <Group name="filters"/>
                </ProxyGroupDomain>
                <DataTypeDomain name="input_type">
                    <DataType value="vtkDataSet"/>
                </DataTypeDomain>
            </InputProperty>
            
            <!-- Featuring Angle -->
            <DoubleVectorProperty
                name="Feature Angle"
                command="SetFeatureAngle"
                number_of_elements="1"
                default_values="30">
                <Documentation>
                    Featuring angle is a criterion for searching for sharped edges on the surface. More angle is more restrictive search.
                </Documentation>
            </DoubleVectorProperty>

            <!-- Surface Color -->
            <IntVectorProperty
                name="Surface Color Mode"
                command="SetSurfaceColorMode"
                number_of_elements="1"
                default_values="2"> 
                <EnumerationDomain name="enum">
                    <Entry value="0" text="Body color"/>
                    <Entry value="1" text="Mono color"/>
                    <Entry value="2" text="Poly color"/>
                </EnumerationDomain>
                <Documentation>
                    Set the color of featured surface. Body color assigns 0 to all surface points. Mono color assigns 1 and poly color assigns integers for each group of points in a separated feature surface.
                </Documentation>
            </IntVectorProperty>

            <!-- Edges Color -->
            <IntVectorProperty
                name="Edge Color"
                command="SetEdgeColorMode"
                number_of_elements="1"
                default_values="3">
                <EnumerationDomain name="enum">
                    <Entry value="0" text="Body color"/>
                    <Entry value="1" text="Mono color"/>
                    <Entry value="2" text="Surface color"/>
                    <Entry value="3" text="Oposite Surface color"/>
                </EnumerationDomain>
                <Documentation>
                    Set the color of edges. Body color assigns 0 to all edge points. Mono color assings -1 to all edge points. Surface color assigns the same color of surface to the edges that it belongs to. Opposite surface color assigns opposite of the correcpondent surface color.
                </Documentation>
            </IntVectorProperty>

        </SourceProxy>
    </ProxyGroup>
</ServerManagerConfiguration>
